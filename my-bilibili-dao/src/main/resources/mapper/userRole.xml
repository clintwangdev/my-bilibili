<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clint.mybilibili.dao.UserRoleDao">

    <!-- 根据用户 ID 获取关联角色 -->
    <select id="getUserRoleByUserId" parameterType="java.lang.Long" resultType="com.clint.mybilibili.domain.auth.UserRole">
        select
            ur.*,
            ar.name roleName,
            ar.code roleCode
        from
            t_user_role ur
            left join
                t_auth_role ar
            on
                ur.roleId = ar.id
        where
            ur.userId = #{userId}
    </select>

</mapper>